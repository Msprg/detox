        filename ".pyd";
        filename ".so";
        filename ".class";
        filename ".png";
        filename ".webp";
        filename ".jpg";
        filename ".jpeg";
        filename ".bmp";
        filename ".scss";
        filename ".css";
        filename ".cshtml";
        filename ".erb";
        filename ".h";
        filename ".pxd";
        filename ".git";
        filename ".less";
        filename ".inf";
        filename ".cfg";
        filename ".ds";
        filename ".db";
        filename ".conf";
        filename ".ini";
        filename ".dll";
        filename ".exe";
        filename ".dxf";

#        filename "";
